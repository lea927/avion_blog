  <div class="container">
    <%= form_with model: @article do |f| %>
      <div class="form-group mt-2">
        <%= f.label :name, "Blog Title" %>
        <%= f.text_field :name, placeholder: "Blog Title",class: "form-control" %>
      </div>
      <div class="form-group mt-2">
        <%= f.label :body, "Content" %>
        <%= f.text_area :body, placeholder: "Blog content",class: "form-control", rows: "15" %>
      </div>
      <div class="form-group d-flex justify-content-end mt-3"><%= f.submit class:"btn btn-outline-dark "%></div>
    <% end %>
  </div>
